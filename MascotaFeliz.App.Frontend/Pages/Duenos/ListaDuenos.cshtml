@page
@model MascotaFeliz.App.Frontend.Pages.ListaDuenosModel
@{
}
<div class="content">
    <h2>Lista de Dueños</h2>
    <form class="center">
        <a class = "botons" asp-page="./EditarDuenos">Adicionar Dueño</a>
    </form>
    <table class="table">
        <thead>
            <tr>
              <th>ID</th>
              <th>Nombres</th>
              <th>Apellidos</th>
              <th></th>
              <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var dueno in Model.listaDuenos)    
        {
            <tr>
                <td>@dueno.Id</td>
                <td>@dueno.Nombres</td>
                <td>@dueno.Apellidos</td>
                <td>
                    <a class="botons" asp-page="./DetallesDuenos" asp-route-duenoId="@dueno.Id">Detalle Dueño</a>
                </td>
                <td>
                    <a class="botons" asp-page="./EditarDuenos" asp-route-duenoId="@dueno.Id">Editar Dueño</a>
                </td>
                <td>
                    <a class="botons" asp-page="./EliminarDuenos" asp-route-duenoId="@dueno.Id">Eliminar Dueño</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
